#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
set -e

mktmpdir() {
  dir=$(mktemp -t fakesu-$1-XXXX)
  rm -rf $dir
  mkdir -p $dir
  echo $dir
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BUILDPACK_DIR=`cd $(dirname $0); cd ..; pwd`
BUILD_DIR=$1
CACHE_DIR=$2

GRAPHVIZ_BUILD="$(mktmpdir graphviz)"

mkdir -p $CACHE_DIR/.tools/graphviz

export PATH=/sbin:/usr/sbin:$PATH:

echo "-----> Fetching graphviz"
cd $GRAPHVIZ_BUILD
curl -O http://www.graphviz.org/pub/graphviz/stable/SOURCES/graphviz-2.30.1.tar.gz
tar zxvf graphviz-2.30.1.tar.gz >/dev/null 2>&1
cd graphviz-2.30.1
echo "-----> Configuring graphviz"
./configure --prefix=$CACHE_DIR/.tools/graphviz --disable-shared --enable-static --without-ltdl-install --without-ltdl --disable-swig --disable-python
echo "-----> Compiling graphviz"
make -j5
echo "-----> Installing graphviz"
make install
echo "grapvhiz installed" | indent

cd $BUILD_DIR
mkdir -p $BUILD_DIR/bin
cp $CACHE_DIR/.tools/graphviz/bin/* $BUILD_DIR/bin

exit 0
